<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#AB7B7A7A"
    app:cardCornerRadius="20dp"
    app:rippleColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/stv_bold"
            android:gravity="center"
            android:text="@string/package_details"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableStart="@drawable/locationwhite"
                android:drawablePadding="12dp"
                android:gravity="start"
                android:fontFamily="@font/stv_bold"
                android:padding="8dp"
                android:text="@string/locationTo"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/locationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="المحلة الكبري"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@android:color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableStart="@drawable/calender"
                android:drawablePadding="12dp"
                android:gravity="start"
                android:padding="8dp"
                android:text="@string/date"
                android:fontFamily="@font/stv_bold"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="22-10-2019"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableStart="@drawable/time_1"
                android:drawablePadding="12dp"
                android:gravity="start"
                android:padding="8dp"
                android:text="@string/time"
                android:fontFamily="@font/stv_bold"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:text="60:20 PM"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/moreDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_color_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/more_details"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearInfo"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>