<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:id="@+id/messagesItem">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messages_userImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/userplaceholder2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messages_userOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:src="@drawable/online"
        app:layout_constraintStart_toStartOf="@id/messages_userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messages_userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text="محمود احمد"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/black"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/messages_timeTv"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/messages_userImage"
        app:layout_constraintTop_toTopOf="@id/messages_userImage" />

    <TextView
        android:id="@+id/messages_timeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="06:30 PM"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/messages_userImage" />

    <TextView
        android:id="@+id/messages_NumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_color_bg"
        android:gravity="center"
        android:text="4"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/messages_timeTv"
        app:layout_constraintStart_toStartOf="@id/messages_timeTv"
        app:layout_constraintTop_toBottomOf="@id/messages_timeTv" />

    <TextView
        android:id="@+id/messages_messageTextTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="2"
        android:gravity="start"
        android:text="السلام عليكم"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/messages_timeTv"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/messages_userNameTv"
        app:layout_constraintTop_toBottomOf="@id/messages_userNameTv" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0.3dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messages_userImage" />
</androidx.constraintlayout.widget.ConstraintLayout>